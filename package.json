{
  "name": "egg-test-ui",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky install",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue,html}",
    "clean:type": "rimraf ./dist",
    "type:node": "tsc -p tsconfig.node.json --noEmit --composite false",
    "type:src": "pnpm run clean:type && vue-tsc -p tsconfig.src.json --composite false --declaration --emitDeclarationOnly",
    "mv-type": "tsx ./scripts/dts-mv.ts",
    "build:ui": "pnpm run type:src && pnpm --filter ./packages/** run build && pnpm run mv-type"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.0",
    "mrm": "^4.1.22",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-stylistic": "^0.4.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.26"
  },
  "dependencies": {
    "vue": "^3.4.31"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write",
    "**/*.{js,jsx,tsx,ts}": [
      "eslint --fix"
    ],
    "**/*.{scss,css}": [
      "stylelint --fix"
    ],
    "**/*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ],
    "**/*.{html,json,md}": [
      "prettier --write"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
